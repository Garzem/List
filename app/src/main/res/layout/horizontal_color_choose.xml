<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/colorOfHabit"
        android:text="@string/color_choose_text"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_margin" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_gravity="center"
        android:layout_width="325dp"
        android:layout_height="120dp"
        android:fadeScrollbars="false" >

        <LinearLayout
            android:id="@+id/linear_color_buttons"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/gradient"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_pink"
                android:layout_margin="@dimen/large_margin"
                android:layout_width="@dimen/color_button_width"
                android:layout_height="@dimen/color_button_width"
                android:background="@drawable/color_button"
                android:backgroundTint="@color/colorPink" />

            <Button
                android:id="@+id/button_red"
                android:layout_margin="@dimen/large_margin"
                android:layout_width="@dimen/color_button_width"
                android:layout_height="@dimen/color_button_width"
                android:backgroundTint="@color/colorRed"
                android:background="@drawable/color_button" />

            <Button
                android:id="@+id/button_deepOrange"
                android:layout_margin="@dimen/large_margin"
                android:layout_width="@dimen/color_button_width"
                android:layout_height="@dimen/color_button_width"
                android:backgroundTint="@color/colorDeepOrange"
                android:background="@drawable/color_button" />

            <Button
                android:id="@+id/button_orange"
                android:layout_margin="@dimen/large_margin"
                android:layout_width="@dimen/color_button_width"
                android:layout_height="@dimen/color_button_width"
                android:backgroundTint="@color/colorOrange"
                android:background="@drawable/color_button" />

            <Button
                android:id="@+id/button_amber"
                android:layout_margin="@dimen/large_margin"
                android:layout_width="@dimen/color_button_width"
                android:layout_height="@dimen/color_button_width"
                android:backgroundTint="@color/colorAmber"
                android:background="@drawable/color_button" />

            <Button
                android:id="@+id/button_yellow"
                android:layout_margin="@dimen/large_margin"
                android:layout_width="@dimen/color_button_width"
                android:layout_height="@dimen/color_button_width"
                android:backgroundTint="@color/colorYellow"
                android:background="@drawable/color_button" />

            <Button
                android:id="@+id/button_lime"
                android:layout_margin="@dimen/large_margin"
                android:layout_width="@dimen/color_button_width"
                android:layout_height="@dimen/color_button_width"
                android:backgroundTint="@color/colorLime"
                android:background="@drawable/color_button" />

            <Button
                android:id="@+id/button_lightGreen"
                android:layout_margin="@dimen/large_margin"
                android:layout_width="@dimen/color_button_width"
                android:layout_height="@dimen/color_button_width"
                android:backgroundTint="@color/colorLightGreen"
                android:background="@drawable/color_button" />

            <Button
                android:id="@+id/button_green"
                android:layout_margin="@dimen/large_margin"
                android:layout_width="@dimen/color_button_width"
                android:layout_height="@dimen/color_button_width"
                android:backgroundTint="@color/colorGreen"
                android:background="@drawable/color_button" />

            <Button
                android:id="@+id/button_teal"
                android:layout_margin="@dimen/large_margin"
                android:layout_width="@dimen/color_button_width"
                android:layout_height="@dimen/color_button_width"
                android:backgroundTint="@color/colorTeal"
                android:background="@drawable/color_button" />

            <Button
                android:id="@+id/button_cyan"
                android:layout_margin="@dimen/large_margin"
                android:layout_width="@dimen/color_button_width"
                android:layout_height="@dimen/color_button_width"
                android:backgroundTint="@color/colorCyan"
                android:background="@drawable/color_button" />

            <Button
                android:id="@+id/button_lightBlue"
                android:layout_margin="@dimen/large_margin"
                android:layout_width="@dimen/color_button_width"
                android:layout_height="@dimen/color_button_width"
                android:backgroundTint="@color/colorLightBlue"
                android:background="@drawable/color_button" />

            <Button
                android:id="@+id/button_blue"
                android:layout_margin="@dimen/large_margin"
                android:layout_width="@dimen/color_button_width"
                android:layout_height="@dimen/color_button_width"
                android:backgroundTint="@color/colorBlue"
                android:background="@drawable/color_button" />

            <Button
                android:id="@+id/button_darkBlue"
                android:layout_margin="@dimen/large_margin"
                android:layout_width="@dimen/color_button_width"
                android:layout_height="@dimen/color_button_width"
                android:backgroundTint="@color/colorDarkBlue"
                android:background="@drawable/color_button" />

            <Button
                android:id="@+id/button_purple"
                android:layout_margin="@dimen/large_margin"
                android:layout_width="@dimen/color_button_width"
                android:layout_height="@dimen/color_button_width"
                android:backgroundTint="@color/colorPurple"
                android:background="@drawable/color_button" />

            <Button
                android:id="@+id/button_deepPurple"
                android:layout_margin="@dimen/large_margin"
                android:layout_width="@dimen/color_button_width"
                android:layout_height="@dimen/color_button_width"
                android:backgroundTint="@color/colorDeepPurple"
                android:background="@drawable/color_button" />

            <Button
                android:id="@+id/button_deepPurpleDark"
                android:layout_margin="@dimen/large_margin"
                android:layout_width="@dimen/color_button_width"
                android:layout_height="@dimen/color_button_width"
                android:backgroundTint="@color/colorDeepPurpleDark"
                android:background="@drawable/color_button" />
        </LinearLayout>
    </HorizontalScrollView>
<!--    <Space-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="30dp" />-->
</LinearLayout>